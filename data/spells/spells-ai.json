    {
      "name": "巧舌如簧",
      "ENG_name": "Gift of Gab",
      "source": "AI",
      "page": 76,
      "level": 2,
      "school": "E",
      "time": [
        {
          "number": 1,
          "unit": "反应",
          "condition": "当你与另一个生物说话时采取"
        }
